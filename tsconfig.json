"compilerOptions": {
  "incremental": true,
  "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
  "module": "ESNext",
  "strict": true,
  "lib": ["esnext", "dom", "dom.iterable"],
  "jsx": "preserve",
  "esModuleInterop": true,
  "skipLibCheck": true,
  "allowImportingTsExtensions": true,
  "moduleResolution": "bundler",
  "baseUrl": ".",
  "types": ["node", "vite/client"],
  "paths": {
    "@/*": ["./client/src/*"],
    "@shared/*": ["./shared/*"]
  },
  "outDir": "./server/dist",
  "rootDir": "./server"
}
